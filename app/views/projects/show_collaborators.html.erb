					<div class="author alignright">
						<small> - Henry Ford</small>
					</div>
				</blockquote>
			</section>
			
			<div class="cl"></div>

			<% @project.get_participations_ordered.each do |participation| %>
			  <%= render :partial => "collaborator_list_entry" , :locals => {:participation => participation }%>
			<% end %>
			
	
			<div class="cl"></div>
			
		</div>

